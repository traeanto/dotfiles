#!/usr/bin/bash

cr="\033[0;0m"
c0="\033[0;30m"
c1="\033[0;31m"
c2="\033[0;32m"
c3="\033[0;33m"
c4="\033[0;34m"
c5="\033[0;35m"
c6="\033[0;36m"
c7="\033[0;37m"
cb0="\033[1;30m"
cb1="\033[1;31m"
cb2="\033[1;32m"
cb3="\033[1;33m"
cb4="\033[1;34m"
cb5="\033[1;35m"
cb6="\033[1;36m"
cb7="\033[1;37m"
b0="\033[40m"
b1="\033[41m"
b2="\033[42m"
b3="\033[43m"
b4="\033[44m"
b5="\033[45m"
b6="\033[46m"
b7="\033[47m"


getusername() {
    username="$(whoami)"
    echo $username
}

gethostname() {
    hostname="$(hostname)"
    echo $hostname
}

getseparator() {
    _USERNAME="$(getusername)"
    _HOSTNAME="$(gethostname)"
    let _COUNT="2 + ${#_USERNAME} + ${#_HOSTNAME}"
    for ((i=1; i<="$_COUNT"; i++))
    do
        echo -n "â”"
    done
}

getdistro() {
    distro="$(uname -o) $(uname -r)"
    echo $distro
}

getsession() {
    echo $XDG_BACKEND
}

getshell() {
    shell="$(basename $SHELL)"
    echo $shell
}

getmemory() {
    _MEM="$(free -m | grep 'Mem')"
    _TOTAL="$(echo ${_MEM} | awk '{print $2}')"
    _USED="$(echo ${_MEM} | awk '{print $3}')"
    _PERCEN="$((_USED*100/_TOTAL))"

    memory="${_USED}MB / ${_TOTAL}MB (${_PERCEN}%)"
    echo $memory
}

getuptime() {
    uptime="$(uptime -p | sed 's/up //')"
    echo $uptime
}

echo -e ""
echo -e "${c7}       â–„${b0}â–€${cr}${c7}â–„     â–„${b0}â–€${cr}${c7}â–„          ${cb2}$(getusername)${cr}ðŸ˜º${cb2}$(gethostname)"
echo -e "${c7}      â–„â–ˆ${b5} ${b0} â–ˆâ–€â–ˆâ–€â–ˆ ${b5} ${cr}${c7}â–ˆâ–„         ${c4}$(getseparator)"
echo -e "${c7}  â–„â–„  â–ˆ${b0}           ${c7}â–ˆ  â–„â–„     ${c1}ïŸ${cr} $(getdistro)"
echo -e "${c7} â–ˆ${b0}â–„â–„â–ˆ${cr} ${c7}${b0}â–ˆ  â–€  ${c1}${b0}â”³${c7}${b0}  â–€  ${cr}${c7}â–ˆ â–ˆ${b0}â–„â–„${cr}${c7}â–ˆ    ${c5}ï„µ${cr} $(getsession)"
echo -e "${c3}â–›â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–œ   ${c4}ï€${cr} $(getshell)"
echo -e "${cb3}â–Œ        Hi there       â–   ${c2}ó°Œª${cr} $(getmemory)"
echo -e "${cb3}â–Œ    Have a nice day!   â–   ${c3}ó°Œµ${cr} $(getuptime)"
echo -e "${c3}â–™â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–Ÿ   "
echo -e "${c7}           â–ˆ${b0} ${cr}${c7}â–ˆâ–„${b0}â–€${cr}${c7}â–„           ${c1}â–ˆâ–ˆâ–ˆâ–ˆ${c2}â–ˆâ–ˆâ–ˆâ–ˆ${c3}â–ˆâ–ˆâ–ˆâ–ˆ${c4}â–ˆâ–ˆâ–ˆâ–ˆ${c5}â–ˆâ–ˆâ–ˆâ–ˆ${c6}â–ˆâ–ˆâ–ˆâ–ˆ"
echo -e "${c7}           â–€${b0}â–„â–„â–„â–„${cr}${c7}â–€           ${c0}â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€${c7}â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€"
