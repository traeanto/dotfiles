; Window Sections
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

; Bar    
(defwindow bar
    :exclusive true
    :monitor 0
    :windowtype "dock"
    :stacking "fg"
	:geometry   (geometry   :x "0" 
						    :y "0" 
						    :height "100%" 
						    :width "47"
                            :anchor "left center")
    :vexpand "false"
	:hexpand "false"
(bar))

; Screencap
(defwindow pop-screencap
    :monitor 0
    :geometry   (geometry   :x "0"
                            :y "20px"
                            :height "50px"
                            :width "250px"
                            :anchor "top center")
"h")

; Calendar
(defwindow calendar
    :monitor 0
    :geometry   (geometry   :x "5px"
                            :y "5px"
                            :height "60px"
                            :width "270px"
                            :anchor "left bottom")
(cal))